                <th style="text-align: left; padding: 8px; font-size: 14px;">T.C Kimlik No</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td style="padding: 8px; font-size: 14px;">{{this.ticketNumber}}</td>
                <td style="padding: 8px; font-size: 14px; font-weight: bold;">{{this.pnrNumber}}</td>
                <td style="padding: 8px; font-size: 14px; font-weight: bold;">{{this.passengerFullName}}</td>
                <td style="padding: 8px; font-size: 14px;" >{{this.tcNumber}}</td>
              </tr>
            </tbody>
          </table>
        {{/each}}

