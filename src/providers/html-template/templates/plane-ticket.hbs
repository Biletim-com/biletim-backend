                <th style="text-align: left; padding: 8px; font-size: 14px;">Havayolu</th>
                <th style="text-align: left; padding: 8px; font-size: 14px;">Uçuş Kodu</th>
                <th style="text-align: left; padding: 8px; font-size: 14px;">Uçuş Sınıfı</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td style="padding: 8px; font-size: 14px;">{{this.airlineCompany}}</td>
                <td style="padding: 8px; font-size: 14px;">{{this.flightNumber}}</td>
                <td style="padding: 8px; font-size: 14px;">{{this.flightClass}}({{this.flightClassName}})</td>
