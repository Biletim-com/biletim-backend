          style="font-size: 16px; font-weight: bold; margin-bottom: 10px;"
        >Yolcu Bilgileri</h2>
        {{#each passengers}}
           <h2 style="font-size: 16px; font-weight: bold; margin-top: 20px;">
            Yolcu
            {{#if (moreThanOne ../passengers)}}
              {{inc @index}}
            {{/if}}
          </h2>
          <table
            style="width: 100%; border-collapse: collapse; margin-bottom: 20px; border-bottom: 1.5px solid #04B1EC"
          >
            <thead>
              <tr>
                <th style="text-align: left; padding: 8px; font-size: 14px;">Bilet No</th>
                <th style="text-align: left; padding: 8px; font-size: 14px;">Rezervasyon No (PNR)</th>
